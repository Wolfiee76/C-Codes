// write a program to calculate and return the avarage of an array of elements with even subscripts/indexes.

double Avarage(int arr[], int size)
{
    double sum =0;
    int count = 0;
    for (int i = 0; i < size; i+=2)
    {
        sum += arr[i];
        count++;
    }
    return sum / count;
}


int main()
{
    int num[] = { 10, 5, 1, 2, 6 };
    cout << Avarage(num, 5);
}
